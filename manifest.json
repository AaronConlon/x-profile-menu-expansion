{
  "manifest_version": 3,
  "name": "X/Twitter Profile Links Extension",
  "version": "1.1.0",
  "description": "Adds a hover menu to profile links on X.com with modal popup functionality",
  "icons": {
    "16": "image/x-16.png",
    "32": "image/x-32.png",
    "64": "image/x-64.png",
    "128": "image/x-128.png"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://x.com/*"]
    }
  ]
}
